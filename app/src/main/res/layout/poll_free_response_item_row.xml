<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="54dp"
    android:id="@+id/freeResponseCell"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/optionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="0.02"
            android:layout_marginEnd="22dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="The Bee Movie"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/upvoteImageView"
            android:layout_width="9dp"
            android:layout_height="6.5dp"
            android:src="@drawable/upvote"
            android:contentDescription="Upvote Image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            tools:ignore="HardcodedText" />
    
        <TextView
            android:id="@+id/numberOfUpvotesTextView"
            android:layout_width="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upvoteImageView"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="7.5dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="#9ea7b3"
            android:letterSpacing="0.05"
            android:text="1"
            tools:ignore="HardcodedText" />

    <View
        android:id="@+id/freeResponseDivider"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_marginStart="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>
