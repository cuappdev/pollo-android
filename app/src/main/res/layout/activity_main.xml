<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/poll_groups"
            app:titleTextColor="@color/colorAccent">

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/TabItemNotAllCaps"
            app:tabBackground="@color/white"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@color/blueyGrey">

            <android.support.design.widget.TabItem
                android:id="@+id/tabItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joined" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/created" />

        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/InnerRelativeLayout"
        android:layout_below="@+id/appbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/EditText"
            android:layout_width="match_parent"
            android:layout_height="30pt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_container"
            android:descendantFocusability="beforeDescendants"
            android:elevation="0dp"
            android:focusableInTouchMode="true"
            android:gravity="end"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText_joinPoll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:ems="10"
                android:focusedByDefault="false"
                android:hint="Enter a code..."
                android:inputType="textCapCharacters"
                android:maxLength="8"
                android:textAlignment="viewStart"
                android:textColor="@color/blueyGrey"
                android:textColorHint="@color/blueyGrey"
                android:textCursorDrawable="@drawable/custom_cursor" />

            <Button
                android:id="@+id/join_poll_group"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1pt"
                android:layout_marginEnd="1pt"
                android:layout_marginBottom="1pt"
                android:background="@drawable/rounded_join_button"
                android:text="Join"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textSize="10pt"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>


    </RelativeLayout>

